{
  "name": "dot-usestate",
  "displayName": "Dot useState",
  "description": "This extension designed to streamline your development workflow when working with React. This extension automates the process of creating useState hooks, allowing you to quickly generate the boilerplate code for state management in your React components.",
  "publisher": "sz",
  "version": "1.0.2",
  "keywords": [
    "setstate",
    "useState"
  ],
  "engines": {
    "vscode": "^1.61.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codeCola-c/Dot-useState-VSCode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p -w . --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "webpack": "^5.88.1",
    "webpack-cli": "^4.8.0"
  },
  "contributes": {
    "configuration": {
      "title": "dotuseState",
      "properties": {
        "dotuseState.config": {
          "type": "array",
          "description": "Customize how to useState the result.",
          "default": [
            {
              "trigger": "log",
              "description": "quick log",
              "format": "useState()"
            }
          ],
          "items": {
            "type": "object",
            "additionalProperties": {
              "trigger": {
                "type": "string",
                "required": true
              },
              "description": {
                "type": "string",
                "required": true
              },
              "format": {
                "type": "string",
                "required": true
              }
            }
          }
        }
      }
    }
  }
}